extends layout

block append styles
  style.
    /* Landing page specific styles */
    .hero {
      min-height: 80vh;
      display: flex;
      align-items: center;
      background: linear-gradient(135deg, #6B46C1 0%, #9F7AEA 100%);
      position: relative;
      overflow: hidden;
    }
    
    .hero::before {
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      background: url('/khaboom/images/pattern.svg');
      opacity: 0.1;
    }
    
    .hero-content {
      position: relative;
      z-index: 1;
      color: white;
      max-width: 600px;
    }
    
    .hero h1 {
      font-size: 3.5rem;
      margin-bottom: 1rem;
      font-weight: 700;
    }
    
    .hero p {
      font-size: 1.2rem;
      margin-bottom: 2rem;
      opacity: 0.9;
    }
    
    .hero-btns .btn {
      margin-right: 1rem;
      margin-bottom: 1rem;
    }
    
    .features {
      padding: 6rem 0;
    }
    
    .features-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }
    
    .feature-card {
      background: white;
      border-radius: 10px;
      padding: 2rem;
      box-shadow: 0 5px 15px rgba(0,0,0,0.05);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .feature-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(0,0,0,0.1);
    }
    
    .feature-icon {
      width: 60px;
      height: 60px;
      background: #F5F0FF;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-bottom: 1.5rem;
    }
    
    .feature-card h3 {
      margin-bottom: 1rem;
      font-weight: 600;
    }
    
    .testimonials {
      background: #F7FAFC;
      padding: 6rem 0;
    }
    
    .section-header {
      text-align: center;
      margin-bottom: 4rem;
    }
    
    .section-header h2 {
      font-size: 2.5rem;
      margin-bottom: 1rem;
    }
    
    .testimonial-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 2rem;
    }
    
    .testimonial-card {
      background: white;
      border-radius: 10px;
      padding: 2rem;
      box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    }
    
    .testimonial-content {
      font-style: italic;
      margin-bottom: 1.5rem;
    }
    
    .testimonial-author {
      display: flex;
      align-items: center;
    }
    
    .testimonial-author img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      margin-right: 1rem;
    }
    
    .cta-section {
      padding: 6rem 0;
      background: linear-gradient(135deg, #6B46C1 0%, #9F7AEA 100%);
      color: white;
      text-align: center;
    }
    
    .cta-section h2 {
      font-size: 2.5rem;
      margin-bottom: 1.5rem;
    }
    
    .cta-section p {
      max-width: 600px;
      margin: 0 auto 2rem;
      opacity: 0.9;
    }

